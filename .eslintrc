{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "forOf": true,
            "jsx": true,
            "es6": true,
            "es7": true,
            "experimentalObjectRestSpread" : true
        }
    },
    "rules": {
        "comma-dangle": 0,
        "semi": ["warn", "never"],
        "indent": ["warn", 4, {"SwitchCase": 1}],
        "object-curly-spacing": 0,
        "arrow-body-style": 0,
        "no-console": 0,
        "no-nested-ternary": "off",
        "no-mixed-operators": ["off"],
        "max-len": 0,
        "prefer-template": 0,
        "global-require": 0,
        "no-underscore-dangle": 0,
        "consistent-return": 0,
        "no-confusing-arrow": 0,
        "import/no-unresolved": 0,
        "jsx-quotes": ["error", "prefer-single"],
        "react/jsx-indent": ["warn", 4],
        "react/jsx-indent-props": 0,
        "react/jsx-first-prop-new-line": 0,
        "react/jsx-space-before-closing": [0, "never"],
        "react/jsx-closing-bracket-location": [0, "after-props"],
        "react/jsx-tag-spacing": [0, {
            "closingSlash": "never",
            "beforeSelfClosing": "never",
            "afterOpening": "never"
        }]
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "__DEV__": true,
        "React": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack/config.js"
            }
        }
    }
}
